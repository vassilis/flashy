

<div id="flash">
	<% controller.flash.each do |name, msg| %>
		<% if msg.strip.length > 0 %>
			<div class="alert alert-<%= flash_name(name) %> alert-dismissable">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<%= msg %>
			</div>
		<% end %>
	<% end %>
</div>
